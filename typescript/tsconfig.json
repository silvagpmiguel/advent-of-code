
{
  "exclude": [
    "**/*.test.ts",
    "node_modules",
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",    
    "lib": ["es2017", "dom"],
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@advent/2021": [
        "./libs/2021/index.ts"
      ],
      "@advent/2023": [
        "./libs/2023/index.ts"
      ],
      "@advent/utils": [
        "./libs/utils/index.ts"
      ],
      "@advent/core": [
        "./libs/core/index.ts"
      ],
    }
  },
}
